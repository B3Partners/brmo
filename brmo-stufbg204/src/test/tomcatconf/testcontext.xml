<?xml version="1.0" encoding="UTF-8"?>
<!-- dit is een globale context file die vanuit tomcat/conf wordt geladen voor test runs -->
<Context>
    <!-- properties komen uit [postgres|sqlserver|oracle].properties tijdens process test resources phase -->
    <Resource name="jdbc/brmo/staging"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="30"
              maxIdle="5"
              maxWaitMillis="10000"
              validationQuery="${jdbc.validationQuery}"
              timeBetweenEvictionRunsMillis="30000"
              minEvictableIdleTimeMillis="5000"
              username="${staging.username}"
              password="${staging.password}"
              driverClassName="${jdbc.driverClassName}"
              url="${staging.url}"
    />
    <Resource name="jdbc/brmo/rsgb"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="30"
              maxIdle="5"
              maxWaitMillis="10000"
              validationQuery="${jdbc.validationQuery}"
              timeBetweenEvictionRunsMillis="30000"
              minEvictableIdleTimeMillis="5000"
              username="${rsgb.username}"
              password="${rsgb.password}"
              driverClassName="${jdbc.driverClassName}"
              url="${rsgb.url}"
    />
</Context>
