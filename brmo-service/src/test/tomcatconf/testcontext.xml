<?xml version="1.0" encoding="UTF-8"?>
<!-- dit is een globale context file die vanuit tomcat/conf wordt geladen voor test runs -->
<Context>
    <!-- properties komen uit [postgres|oracle].properties tijdens process test resources phase -->

    <Resource name="jdbc/brmo/staging"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="100"
              maxIdle="5"
              maxWaitMillis="10000"
              validationQuery="${jdbc.validationQuery}"
              timeBetweenEvictionRunsMillis="30000"
              minEvictableIdleTimeMillis="5000"
              username="${staging.username}"
              password="${staging.password}"
              driverClassName="${jdbc.driverClassName}"
              url="${staging.url}"
    />
    <Resource name="jdbc/brmo/rsgb"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="30"
              maxIdle="5"
              maxWaitMillis="10000"
              validationQuery="${jdbc.validationQuery}"
              timeBetweenEvictionRunsMillis="30000"
              minEvictableIdleTimeMillis="5000"
              username="${rsgb.username}"
              password="${rsgb.password}"
              driverClassName="${jdbc.driverClassName}"
              url="${rsgb.url}"
    />
    <Resource name="jdbc/brmo/rsgbbrk"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="30"
              maxIdle="5"
              maxWaitMillis="10000"
              validationQuery="${jdbc.validationQuery}"
              timeBetweenEvictionRunsMillis="30000"
              minEvictableIdleTimeMillis="5000"
              username="${rsgbbrk.username}"
              password="${rsgbbrk.password}"
              driverClassName="${jdbc.driverClassName}"
              url="${rsgbbrk.url}"
    />
    <Resource name="jdbc/brmo/rsgbbgt"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="20"
              maxIdle="5"
              maxWaitMillis="10000"
              validationQuery="${jdbc.validationQuery}"
              timeBetweenEvictionRunsMillis="30000"
              minEvictableIdleTimeMillis="5000"
              username="${rsgbbgt.username}"
              password="${rsgbbgt.password}"
              driverClassName="${jdbc.driverClassName}"
              url="${rsgbbgt.url}"
    />
    <Resource name="mail/session"
              auth="Container"
              type="javax.mail.Session"
              mail.smtp.host="localhost"
              mail.smtp.from="no-reply@b3partners.nl"
    />
</Context>
