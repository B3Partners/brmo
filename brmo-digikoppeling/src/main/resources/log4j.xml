<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="fileAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="${catalina.base}/logs/brmo-digikoppeling.log"/>
        <param name="Threshold" value="info"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="BRMO-SOAP: %5p %d{HH:mm:ss} (%C#%M:%L) - %m%n"/>
        </layout>
    </appender>
    <appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="debug"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%5p %d{HH:mm:ss} (%c#%M:%L) - %m%n"/>
        </layout>
    </appender>
    <logger name="nl.b3p.brmo.digikoppeling">
        <level value="debug"/>
    </logger>
    <root>
        <appender-ref ref="consoleAppender"/>
    </root>
</log4j:configuration>