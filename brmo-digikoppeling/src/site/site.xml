<project xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd"
         name="${project.name} ${project.version}"
         xmlns="http://maven.apache.org/DECORATION/1.3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <publishDate position="left" format="dd-MMMM-yyyy" />
  <version position="left" />
  <skin>
    <groupId>org.apache.maven.skins</groupId>
    <artifactId>maven-fluido-skin</artifactId>
    <version>1.3.1</version>
  </skin>
  <bannerLeft>
    <name>${project.organization.name}</name>
    <src>images/logo.png</src>
    <href>${project.organization.url}</href>
  </bannerLeft>
  <bannerRight>
    <name>${project.name}</name>
    <href>${project.url}</href>
  </bannerRight>
  <body>
    <head />
    <links>
      <item name="Issues dashboard" href="${project.issueManagement.url}" />
    </links>
    <menu name="Information">
      <item name="Home" href="/index.html" />
      <item name="Developer Notes" href="/development.html" />
    </menu>
    <menu ref="parent" />
    <menu ref="modules" />
    <menu ref="reports" />
  </body>
  <poweredBy />
</project>
